<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/row_left"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:gravity="left"
        android:visibility="visible">

        <TextView
            android:id="@+id/message_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/message_right"
            android:layout_alignLeft="@id/message_right"
            android:background="@drawable/their_message"
            android:elevation="2dp"
            android:gravity="start"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            android:textSize="18dp"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:id="@+id/row_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="right">

        <TextView
            android:id="@+id/message_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/my_message"
            android:elevation="2dp"
            android:gravity="right|end"
            android:padding="10dp"
            android:text="Placeholder message"
            android:textColor="#fff"
            android:textSize="18dp"
            android:visibility="visible" />
    </TableRow>

</TableLayout>